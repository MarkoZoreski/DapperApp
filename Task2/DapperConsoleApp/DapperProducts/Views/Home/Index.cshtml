@model List<DapperConsoleApp.Models.Product>

<div class="container">
   
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.category.Picture" style="height: 50%;" alt="Image for product!">

                    <div class="card-body">
                        <h3 class="card-title">@item.ProductName</h3>
                        <p class="card-text">@item.category.Description</p>


                        <h6>Price: $@item.UnitPrice</h6>
                    </div>
                </div>
            </div> if (i % 3 == 2)
            {
            @:</div>
        }
    }
